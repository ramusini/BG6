<div class='container mt-5 mb-5'>
  <div class='row'>
    <div class='col-md-4'>
      <h3>タイトル</h3>
      <table class="table-bordered">
        <tr>
          <td>画像</td>
          <td><img src="<%= @played_bg.image %>" width="100"/></td>
        </tr>
        <tr>
          <td>タイトル</td>
          <td><%= @played_bg.played_title %></td>
        </tr>
        <tr>
          <td>最小プレイヤー</td>
          <td><%= @played_bg.minplayer %></td>
        </tr>
        <tr>
          <td>最大プレイヤー</td>
          <td><%= @played_bg.maxplayer %></td>
        </tr>
        <tr>
          <td>時間</td>
          <td><%= @played_bg.playingtime %></td>
        </tr>
        <tr>
          <td>評価</td>
          <td><%= @played_bg.rate %></td>
        </tr>
      </table>
    </div>
    <div class='col-md-7 offset-md-1'>
      <h3>記録</h3>
      <table class="table">
        <tr>
          <th>遊んだ日</th>
          <th>プレイ時間</th>
          <th>プレイヤー</th>
        </tr>
        <% @records.each do |record| %>
          <tr>
            <td><%= record.date %></td>
            <td><%= record.playing_time %> 分</td>
            <% record.scores.all.each do |score| %>
              <td>
                <%= score.player.player_name %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
