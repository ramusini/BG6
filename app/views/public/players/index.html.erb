<div class="row justify-content-center">
  <div class="col-3">
    <p><%= flash[:natice] %></p>
    <h3>
      プレイヤーリスト
      <%= link_to new_player_path do %>
      <i class="fa-solid fa-user-plus"></i>
      <% end %>
    </h3>
    <% @players.each do |player| %>
      <table class="ms-2">
        <tr>
          <td class="pe-2">
            <%= link_to player_path(player.id), class: "text-decoration-none", method: :delete do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
          </td>
          <td><%= player.player_name %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>