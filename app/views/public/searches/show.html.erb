<table class="table-bordered">
  <% @result.each do |r| %>
    <tr>
      <td>
        <img src="<%= r[:image][0] %>" width="100"/>
      </td>
      <td>
        id: <%= r[:id] %></br>
        タイトル: <%= r[:title] %></br>
        最小人数: <%= r[:minplayer] %></br>
        最大人数: <%= r[:maxplayer] %></br>
        時間: <%= r[:playingtime] %></br>
      </td>
    </tr>
  <% end %>
</table>
<div class="create_record">
  <%= form_with url: new_record_path, local: true do |f| %>
    <%#= f.hidden_field :bg_id, :value => result[:id] %>
    <%= f.submit "記録を作成", class: "btn btn-primary" %>
  <% end %>
</div>