<% if user_signed_in? %>
  <div class="my-5"></div>
  <div class="my-4"></div>
  <div class="col-6 offset-md-3 text-center">
    <!--検索フォーム-->
    <div>
      <%= form_with url: search_searches_path, local: true, method: :get, class: "row" do |f| %>
        <h3>『遊んだ』『遊びたい』ボードゲームを検索</h3>
        <div class="input-group">
          <div class="col-9">
            <%= f.text_field :word, class: "form-control", :placeholder => "例：カタン" %>
          </div>
          <span class="col-auto ps-0">
            <%= f.submit "検索", class: "input-group-text btn-success px-4" %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
  <div class="my-5"></div>
  <div class="my-5"></div>
<% else %>
  <div class="col-12">
    <div class="py-4"></div>
    <div class="my-5"></div>
    <h3 class="text-center">ようこそ、BG録へ！</h3>
    <p class="text-center pt-3">
      ボードゲームを遊んだ記録をつけたり、</br>
      ボードゲームを遊ぶ相手を探しましょう！
    </p>
    <div class="my-5 pt-3"></div>
    <div class="py-5"></div>
  </div>
<% end %>


