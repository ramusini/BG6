<h3>
  <%= render 'user_info', user: @user %> の詳細
  <% if @user == current_user %>
    <%= link_to "編集", edit_user_path(@user) %>
  <% end %>
</h3>
<h3>遊びたいボドゲリスト</h3>
<table class="table-bordered">
  <% @bucket_lists.each do |bucket_list| %>
    <tr>
      <!--遊びたいボドゲ情報-->
      <%= render "public/bucket_lists/bucket_data", data: bucket_list %>
      <!--いいねボタン-->
      <td id="favorite_buttons_<%= bucket_list.id %>">
        <%= render 'public/favorites/favorite', bucket_list: bucket_list %>
      </td>
      <td>
        <%= link_to bucket_list_path(bucket_list) do %>
          コメント:<%= bucket_list.comments.count %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<h3>いいね</h3>
<table class="table-bordered">
  <% @favorite_bucket_lists.each do |f_bucket_list|%>
    <tr>
      <!--遊びたいボドゲ情報-->
      <%= render "public/bucket_lists/bucket_data", data: f_bucket_list %>
      <!--いいねボタン-->
      <td id="favorite_buttons_<%= f_bucket_list.id %>">
        <%= render 'public/favorites/favorite', bucket_list: f_bucket_list %>
      </td>
      <!--ユーザー情報-->
      <td>
        <%= link_to user_path(f_bucket_list.user) do %>
        <%= image_tag f_bucket_list.user.get_profile_image(100,100) %>
        <%= f_bucket_list.user.name %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>